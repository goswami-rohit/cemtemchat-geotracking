// backend/tsconfig.json
{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "resolveJsonModule": true, // If you're importing JSON files
    "moduleResolution": "node", // Important for module resolution
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}